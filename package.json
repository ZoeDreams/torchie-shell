{
  "name": "metaos-desktop",
  "productName": "MetaOS",
  "description": "MetaOS",
  "version": "0.0.1",
  "private": true,
  "author": {
    "name": "OpenMastery.org",
    "email": "info@openmastery.org"
  },
  "copyright": "Â© 2017, OpenMastery.org",
  "homepage": "./",
  "main": "public/electron.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/torchie-love/MetaOS-desktop-release.git"
  },
  "build": {
    "appId": "org.openmastery.metaos.desktop",
    "files": [
      "build/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "perMachine": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "uninstallDisplayName": "${productName}",
      "differentialPackage": true,
      "warningsAsErrors": true
    },
    "publish": {
      "provider": "github"
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "release": "build --em.main=build/electron.js --publish=always",
    "release:update:win": ".\\tasks\\update-dist.bat",
    "prerelease": "yarn build",
    "prerelease:update:win": "yarn build"
  },
  "dependencies": {
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.6",
    "electron-updater": "^2.4.3",
    "node-notifier": "^5.1.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.2.2",
    "semantic-ui-css": "^2.2.12",
    "semantic-ui-react": "^0.74.2"
  },
  "devDependencies": {
    "concurrently": "^3.4.0",
    "cross-env": "^5.0.1",
    "electron": "^1.6.10",
    "electron-builder": "^19.8.0",
    "prettier": "^1.4.4",
    "react-scripts": "^1.0.7",
    "wait-on": "^2.0.2"
  }
}
