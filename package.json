{
  "name": "metaos-desktop",
  "productName": "MetaOS",
  "description": "MetaOS",
  "version": "0.0.1",
  "private": true,
  "author": {
    "name": "OpenMastery.org",
    "email": "info@openmastery.org"
  },
  "copyright": "© 2017, OpenMastery.org",
  "homepage": "./",
  "main": "public/electron.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/torchie-love/MetaOS-desktop-release.git"
  },
  "scripts": {
    "stage": "gulp prettier lint && git add .",
    "start": "react-scripts start",
    "dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "test": "react-scripts test --env=jsdom",
    "prebuild": "gulp prettier lint",
    "build": "react-scripts build",
    "prebundle": "yarn build",
    "bundle": "gulp browserify && gulp uglify",
    "postbundle": "gulp clean",
    "prerelease": "yarn bundle",
    "release": "build --em.main=build/org.openmastery.metaos.dat --publish=always",
    "prerelease:update:build:win": "yarn prerelease",
    "release:update:build:win": ".\\tasks\\update-dist.bat",
    "release:update:win": ".\\tasks\\update-dist.bat"
  },
  "dependencies": {
    "@types/react": "^16.0.9",
    "create-react-class": "^15.6.2",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.6",
    "electron-updater": "^2.4.3",
    "formsy-react": "^0.19.5",
    "formsy-semantic-ui-react": "^0.2.12",
    "node-notifier": "^5.1.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.2.2",
    "semantic-ui-css": "^2.2.12",
    "semantic-ui-react": "^0.74.2"
  },
  "devDependencies": {
    "browserify": "^14.4.0",
    "concurrently": "^3.4.0",
    "cross-env": "^5.0.1",
    "electron": "^1.6.10",
    "electron-builder": "^19.8.0",
    "gnirts": "^1.1.3",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-gnirts": "^1.0.3",
    "gulp-jshint": "^2.0.4",
    "gulp-prettier-plugin": "^1.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-uglify-es": "^0.1.3",
    "jshint": "^2.9.5",
    "jshint-stylish": "^2.2.1",
    "prettier": "^1.4.4",
    "react-scripts": "^1.0.7",
    "uglify-es": "^3.1.3",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "wait-on": "^2.0.2"
  },
  "jshint": {
    "esversion": 6,
    "lookup": false
  },
  "prettier": {
    "configJS": {
      "printWidth": 80,
      "tabWidth": 2,
      "bracketSpacing": true
    },
    "configJSON": {
      "parser": "json",
      "printWidth": 120,
      "tabWidth": 2,
      "bracketSpacing": true
    }
  },
  "browserify": {
    "entries": "build/electron.js",
    "builtins": false,
    "browserField": false,
    "commondir": true,
    "ignoreMissing": true,
    "insertGlobalVars": "global",
    "bundleExternal": false
  },
  "uglify": {
    "parse": {
      "html5_comments": false,
      "shebang": false
    },
    "compress": {
      "dead_code": true,
      "drop_debugger": true,
      "booleans": true,
      "loops": true,
      "unused": true,
      "toplevel": true,
      "top_retain": true,
      "hoist_vars": true,
      "if_return": true,
      "inline": true,
      "join_vars": true,
      "reduce_vars": true,
      "cascade": true,
      "warnings": true,
      "drop_console": true,
      "passes": 1,
      "ecma": 6
    },
    "mangle": {
      "toplevel": true,
      "eval": true
    },
    "output": {
      "preamble": "/* © 2017 // OpenMastery.org // MetaOS // Author : 1-14x0r */",
      "bracketize": true,
      "ecma": 6,
      "indent_level": 0,
      "max_line_len": false,
      "preserve_line": false,
      "quote_keys": false
    },
    "ecma": 6,
    "nameCache": null,
    "ie8": false,
    "warnings": true
  },
  "build": {
    "appId": "org.openmastery.metaos.desktop",
    "files": [
      "build/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "perMachine": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "uninstallDisplayName": "${productName}",
      "differentialPackage": true,
      "warningsAsErrors": true
    },
    "publish": {
      "provider": "github"
    }
  }
}
