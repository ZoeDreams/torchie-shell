{
  "name": "metaos-desktop",
  "productName": "MetaOS",
  "description": "MetaOS",
  "version": "0.0.1",
  "private": true,
  "author": {
    "name": "OpenMastery.org",
    "email": "info@openmastery.org"
  },
  "copyright": "Â© 2017, OpenMastery.org",
  "homepage": "./",
  "main": "public/electron.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/torchie-love/MetaOS-desktop-release.git"
  },
  "build": {
    "appId": "org.openmastery.metaos.desktop",
    "files": ["build/**/*", "package.json"],
    "directories": {
      "buildResources": "resources"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "perMachine": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "uninstallDisplayName": "${productName}",
      "differentialPackage": true,
      "warningsAsErrors": true
    },
    "publish": {
      "provider": "github"
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "test": "react-scripts test --env=jsdom",
    "prebuild": "gulp prettier lint",
    "build": "react-scripts build",
    "prerelease": "yarn build && gulp bundle",
    "release": "build --em.main=build/electron.bundle.js --publish=always",
    "prerelease:update:build:win": "yarn build",
    "release:update:build:win": ".\\tasks\\update-dist.bat",
    "release:update:win": ".\\tasks\\update-dist.bat"
  },
  "dependencies": {
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.6",
    "electron-updater": "^2.4.3",
    "node-notifier": "^5.1.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.2.2",
    "semantic-ui-css": "^2.2.12",
    "semantic-ui-react": "^0.74.2"
  },
  "devDependencies": {
    "browserify": "^14.4.0",
    "concurrently": "^3.4.0",
    "cross-env": "^5.0.1",
    "electron": "^1.6.10",
    "electron-builder": "^19.8.0",
    "gulp": "^3.9.1",
    "gulp-jshint": "^2.0.4",
    "gulp-prettier-plugin": "^1.0.1",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-uglify": "^3.0.0",
    "jshint": "^2.9.5",
    "jshint-stylish": "^2.2.1",
    "prettier": "^1.4.4",
    "react-scripts": "^1.0.7",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "wait-on": "^2.0.2"
  },
  "jshintConfig": {
    "esversion": 6
  },
  "prettier": {
    "configJS": {
      "printWidth": 80,
      "tabWidth": 2,
      "bracketSpacing": true
    },
    "configJSON": {
      "parser": "json",
      "printWidth": 120,
      "tabWidth": 2,
      "bracketSpacing": true
    }
  }
}
